<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false" >

    <layer-list>

      <item android:left="5dp" android:top="5dp">

        <shape>

          <corners android:radius="32dp"/>
          <solid android:color="#000" />
          
        </shape>
        
      </item>

      <item>

        <shape>

          <gradient android:angle="270" android:endColor="#00BFFF" android:startColor="#00BFFF"/>
          <corners android:radius="32dp"/>
          
        </shape>
        
      </item>
      
    </layer-list>
    
  </item>


  <item android:state_pressed="true" >

    <layer-list>

      <item android:left="5dp" android:top="5dp">

        <shape>

          <corners android:radius="32dp"/>
          <solid android:color="#000" />

        </shape>

      </item>

      <item>

        <shape>

          <gradient android:angle="270" android:endColor="#00BFFF" android:startColor="#1E90FF"/>
          <corners android:radius="32dp"/>

        </shape>

      </item>

    </layer-list>

  </item>
  
</selector>
